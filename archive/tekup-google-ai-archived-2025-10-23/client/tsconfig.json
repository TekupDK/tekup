{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "tests/**/*"
  ],
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/test/**/*",
    "vitest.config.ts",
    "src/lib/sentry.ts",
    "src/lib/logger.ts",
    "src/lib/globalErrorHandler.ts",
    "src/hooks/useErrorTracking.ts",
    "src/components/SystemHealth.tsx",
    "src/components/ui/ErrorFeedback.tsx",
    "src/services/healthService.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}