{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "strict": false,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "src/tools/toolsets/emailToolset.ts"
    ]
}