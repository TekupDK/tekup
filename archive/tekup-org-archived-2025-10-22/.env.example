# Database Configuration
PX_DATABASE_URL="postgresql://username:password@localhost:5432/tekup_db"

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY_SALT_ROUNDS=12
API_KEY_EXPIRATION_DAYS=365

# GDPR Compliance Configuration
CONSENT_VERSION=1.0.0
GDPR_ENABLED=true
DATA_RETENTION_ENABLED=true
CROSS_TENANT_ACCESS_ENABLED=true

# Cross-Tenant Access Configuration
FOODTRUCK_TENANT_ID=your-foodtruck-tenant-uuid
ESSENZA_TENANT_ID=your-essenza-tenant-uuid
RENDETALJE_TENANT_ID=your-rendetalje-tenant-uuid
TEKUP_ADMIN_TENANT_ID=your-tekup-admin-tenant-uuid

# Business Access Control
FOODTRUCK_BUSINESS_SCOPE=business:foodtruck
ESSENZA_BUSINESS_SCOPE=business:essenza
RENDETALJE_BUSINESS_SCOPE=business:rendetalje
TEKUP_ADMIN_BUSINESS_SCOPE=business:tekup_admin

# Cross-Tenant Scopes
CROSS_TENANT_READ_SCOPE=cross_tenant:read
CROSS_TENANT_WRITE_SCOPE=cross_tenant:write
CROSS_TENANT_ADMIN_SCOPE=cross_tenant:admin

# Voice Agent Configuration
FLOW_API_URL=http://localhost:3000
VOICE_AGENT_API_KEY=your-voice-agent-api-key
VOICE_AGENT_TENANT_ID=your-voice-agent-tenant-uuid

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
ENABLE_AUDIT_LOGGING=true
SECURITY_ALERT_EMAIL=security@tekup.org

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Data Retention Policies
LEADS_RETENTION_DAYS=2555  # 7 years
CUSTOMER_DATA_RETENTION_DAYS=1095  # 3 years
FINANCIAL_RECORDS_RETENTION_DAYS=3650  # 10 years

# GDPR Compliance
GDPR_BREACH_NOTIFICATION_HOURS=72
GDPR_ACCESS_REQUEST_SLA_DAYS=30
GDPR_ERASURE_REQUEST_SLA_DAYS=30

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true
CORS_ORIGIN=*
ENABLE_HTTPS_REDIRECT=false

# API Key Rotation
API_KEY_ROTATION_ENABLED=true
API_KEY_ROTATION_WARNING_DAYS=30
API_KEY_MAX_ROTATION_COUNT=10

# Tenant Isolation
ENFORCE_STRICT_TENANT_ISOLATION=true
PREVENT_CROSS_TENANT_QUERIES=true
ENABLE_TENANT_ACCESS_LOGGING=true

# AI Agent Security
VOICE_AGENT_TENANT_VALIDATION=true
MOBILE_AGENT_TENANT_VALIDATION=true
ENABLE_AI_AGENT_ACCESS_LOGGING=true

# Compliance Monitoring
ENABLE_COMPLIANCE_MONITORING=true
COMPLIANCE_ALERT_EMAIL=compliance@tekup.org
ENABLE_AUTOMATED_COMPLIANCE_REPORTS=true

# Backup and Recovery
ENABLE_AUTOMATED_BACKUPS=true
BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION_ENABLED=true

# Development and Testing
NODE_ENV=development
ENABLE_TEST_ENDPOINTS=false
ENABLE_DEBUG_LOGGING=false
