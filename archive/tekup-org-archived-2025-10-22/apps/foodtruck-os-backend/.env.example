# Database
DATABASE_URL="postgresql://username:password@localhost:5432/foodtruck_os"

# JWT Configuration
JWT_SECRET="your-foodtruck-jwt-secret-key"
JWT_EXPIRES_IN="24h"

# TekUp SSO
TEKUP_SSO_URL="https://sso.tekup.dk"
TEKUP_SSO_CLIENT_ID="foodtruck-os"
TEKUP_SSO_CLIENT_SECRET="your-sso-client-secret"

# Application
NODE_ENV="development"
PORT=3010
API_PREFIX="api/v1"

# Danish Integrations
DANISH_FOOD_SAFETY_API_URL="https://api.fvst.dk"
DANISH_FOOD_SAFETY_API_KEY="your-fvst-api-key"
CVR_API_URL="https://cvrapi.dk/api"
CVR_API_KEY="your-cvr-api-key"

# Payment Processing
DANKORT_MERCHANT_ID="your-dankort-merchant-id"
DANKORT_SECRET_KEY="your-dankort-secret"
MOBILEPAY_MERCHANT_ID="your-mobilepay-merchant-id"
MOBILEPAY_API_KEY="your-mobilepay-api-key"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# CORS
CORS_ORIGINS="http://localhost:3000,https://foodtruck.tekup.dk"
