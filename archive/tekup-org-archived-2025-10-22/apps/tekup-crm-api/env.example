# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/tekup_crm_cleaning?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# Server Configuration
PORT=3001
NODE_ENV="development"
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Danish Business Configuration
DANISH_HOLIDAYS_ENABLED=true
DANISH_POSTAL_CODE_VALIDATION=true
DANISH_PHONE_VALIDATION=true

# Multi-tenant Configuration
TENANT_HEADER="x-tenant-id"
DEFAULT_TENANT_ID="demo-tenant"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@tekup.org"

# SMS Configuration (for Danish SMS notifications)
SMS_PROVIDER="twilio"
SMS_FROM="+45XXXXXXXX"
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# Redis Configuration (for caching and sessions)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Monitoring and Analytics
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET="your-session-secret-here"
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE="lax"

# Danish Cleaning Industry Specific
DEFAULT_HOURLY_RATE=250
DEFAULT_CURRENCY="DKK"
DEFAULT_TIMEZONE="Europe/Copenhagen"
MAX_JOBS_PER_DAY=8
MAX_HOURS_PER_DAY=10
MIN_TRAVEL_TIME_MINUTES=15
MIN_BREAK_TIME_MINUTES=30

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH="/api-docs"

# Health Check
HEALTH_CHECK_PATH="/health"
HEALTH_CHECK_INTERVAL=30000
