# Database
DATABASE_URL="postgresql://username:password@localhost:5432/mcp_studio"

# JWT Configuration
JWT_SECRET="your-mcp-studio-jwt-secret-key"
JWT_EXPIRES_IN="24h"

# TekUp SSO
TEKUP_SSO_URL="https://sso.tekup.dk"
TEKUP_SSO_CLIENT_ID="mcp-studio"
TEKUP_SSO_CLIENT_SECRET="your-sso-client-secret"

# Application
NODE_ENV="development"
PORT=3013
API_PREFIX="api/v1"

# MCP Development & Deployment
MCP_REGISTRY_URL="https://registry.mcp.dev"
MCP_REGISTRY_API_KEY="your-mcp-registry-api-key"
DOCKER_REGISTRY_URL="registry.tekup.dk"
DOCKER_REGISTRY_USERNAME="tekup-mcp"
DOCKER_REGISTRY_PASSWORD="your-docker-password"

# GitHub Integration
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GITHUB_WEBHOOK_SECRET="your-github-webhook-secret"

# Cloud Deployment
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-north-1"
KUBERNETES_CONFIG_PATH="/path/to/kubeconfig"

# File Storage & Assets
AWS_S3_BUCKET="mcp-studio-assets"
CDN_URL="https://cdn.mcp-studio.tekup.dk"

# Analytics & Monitoring
ANALYTICS_API_KEY="your-analytics-api-key"
PROMETHEUS_ENDPOINT="http://prometheus:9090"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# CORS
CORS_ORIGINS="http://localhost:3000,https://mcp-studio.tekup.dk"
