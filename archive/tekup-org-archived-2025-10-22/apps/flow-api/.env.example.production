# Flow API - Production Example
# Copy to .env.production and fill in production secrets via your hosting env manager

NODE_ENV=production

# Public base URL that clients may call (also used by config validation)
FLOW_API_URL=https://api.tekup.dk

# API server
PX_API_PORT=4000
PX_AUTO_SEED=false

# CORS
# Comma-separated list of allowed origins
CORS_ORIGIN=https://www.tekup.dk,https://tekup.dk

# Database
# Preferred
DATABASE_URL=postgresql://<user>:<pass>@<host>:5432/tekup?schema=public
# Alias (kept for compatibility; either one works due to @tekup/config aliasing)
PX_DATABASE_URL=postgresql://<user>:<pass>@<host>:5432/tekup?schema=public

# Redis (optional if you enable features that need it)
PX_REDIS_HOST=<redis-host>
PX_REDIS_PORT=6379
PX_REDIS_PASSWORD=
PX_REDIS_DB=0
PX_REDIS_CACHE_DB=1
PX_REDIS_RATE_LIMIT_DB=2
PX_REDIS_HEALTH_DB=3
PX_REDIS_CLUSTER_ENABLED=false

# Feature flags (optional)
FEATURE_LEADS=true
FEATURE_INBOX=false
FEATURE_INCIDENTS=false
