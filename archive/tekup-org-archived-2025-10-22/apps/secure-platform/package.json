{
  "name": "@tekup/secure-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "pnpm --filter @tekup/config build",
    "build": "tsc -p tsconfig.build.json",
    "start": "pnpm --filter @tekup/config build && ts-node -r tsconfig-paths/register src/main.ts",
    "dev": "pnpm --filter @tekup/config build && nodemon --watch 'src/**/*.ts' --exec ts-node -r tsconfig-paths/register src/main.ts",
    "start:prod": "node dist/main.js",
    "lint": "eslint ."
  },
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "@tekup/config": "workspace:*",
    "@nestjs/swagger": "^7.4.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.1.2",
    "@nestjs/testing": "^10.4.20",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.10",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}