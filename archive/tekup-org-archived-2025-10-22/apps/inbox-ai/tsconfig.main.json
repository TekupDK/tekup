{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/main",
    "noEmit": false,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*",
    "src/preload/**/*"
  ],
  "exclude": [
    "src/renderer"
  ]
}