# Database
DATABASE_URL="postgresql://username:password@localhost:5432/rendetalje_os"

# JWT Configuration
JWT_SECRET="your-rendetalje-jwt-secret-key"
JWT_EXPIRES_IN="24h"

# TekUp SSO
TEKUP_SSO_URL="https://sso.tekup.dk"
TEKUP_SSO_CLIENT_ID="rendetalje-os"
TEKUP_SSO_CLIENT_SECRET="your-sso-client-secret"

# Application
NODE_ENV="development"
PORT=3011
API_PREFIX="api/v1"

# Danish Employment & Labor Law
DANISH_EMPLOYMENT_API_URL="https://api.borger.dk"
DANISH_EMPLOYMENT_API_KEY="your-employment-api-key"
ARBEJDSTILSYNET_API_URL="https://api.at.dk"
ARBEJDSTILSYNET_API_KEY="your-at-api-key"

# Route Optimization
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-token"

# Danish Business Registry
CVR_API_URL="https://cvrapi.dk/api"
CVR_API_KEY="your-cvr-api-key"

# Payment Processing
DANKORT_MERCHANT_ID="your-dankort-merchant-id"
DANKORT_SECRET_KEY="your-dankort-secret"
MOBILEPAY_MERCHANT_ID="your-mobilepay-merchant-id"
MOBILEPAY_API_KEY="your-mobilepay-api-key"

# Compliance & Safety
SAFETY_COMPLIANCE_API_URL="https://api.arbejdstilsynet.dk"
SAFETY_COMPLIANCE_API_KEY="your-safety-api-key"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# CORS
CORS_ORIGINS="http://localhost:3000,https://rendetalje.tekup.dk"
