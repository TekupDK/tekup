# Database
DATABASE_URL="postgresql://username:password@localhost:5432/tekup_unified?schema=public"

# JWT
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_EXPIRATION="24h"
JWT_REFRESH_SECRET="your-super-secure-refresh-secret-key-here"
JWT_REFRESH_EXPIRATION="7d"

# Server
NODE_ENV=development
PORT=3000

# Redis (for caching and sessions)
REDIS_URL="redis://localhost:6379"

# External Services
# Add your external service configurations here

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN="http://localhost:3000,https://tekup.dk,https://*.tekup.dk"

# AI Features (Optional - platform works without these)
ENABLE_AI_FEATURES=false
OPENAI_API_KEY=# Optional - only if you want OpenAI features
GEMINI_API_KEY=# Optional - only if you want Google AI features
AI_DEFAULT_PROVIDER=# none, openai, or gemini
