# Database
DATABASE_URL="postgresql://username:password@localhost:5432/essenza_pro"

# JWT Configuration
JWT_SECRET="your-essenza-jwt-secret-key"
JWT_EXPIRES_IN="24h"

# TekUp SSO
TEKUP_SSO_URL="https://sso.tekup.dk"
TEKUP_SSO_CLIENT_ID="essenza-pro"
TEKUP_SSO_CLIENT_SECRET="your-sso-client-secret"

# Application
NODE_ENV="development"
PORT=3012
API_PREFIX="api/v1"

# Danish Consumer Protection
DANISH_CONSUMER_API_URL="https://api.forbrugerombudsmanden.dk"
DANISH_CONSUMER_API_KEY="your-consumer-api-key"
CVR_API_URL="https://cvrapi.dk/api"
CVR_API_KEY="your-cvr-api-key"

# Payment Processing
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLIC_KEY="pk_test_your-stripe-public-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
DANKORT_MERCHANT_ID="your-dankort-merchant-id"
DANKORT_SECRET_KEY="your-dankort-secret"
MOBILEPAY_MERCHANT_ID="your-mobilepay-merchant-id"
MOBILEPAY_API_KEY="your-mobilepay-api-key"

# Email & SMS
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@essenza.tekup.dk"
SMS_GATEWAY_API_KEY="your-sms-api-key"

# File Storage
AWS_S3_BUCKET="essenza-pro-assets"
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="eu-north-1"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# CORS
CORS_ORIGINS="http://localhost:3000,https://essenza.tekup.dk"
