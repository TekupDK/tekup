        "MCP_AUTH_TOKEN": "Bearer ZDNiNzU4YzQtNzk3OC00OTA5LTlhYjgtYzdkNTI0YTE2NjQyOmZjY2JiMzZlLTgwZDQtNGZmMi05ZjJlLTEyYjFjMjljYWFhMw=="
      },
      "tools": [
        "gmail_read",
        "gmail_send", 
        "gmail_search",
        "calendar_create_event",
        "calendar_list_events",
        "calendar_update_event",
        "calendar_delete_event",
        "zapier_trigger_zap"
