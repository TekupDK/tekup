# Development Dockerfile for Lead Platform backend
ARG NODE_VERSION=20
FROM node:${NODE_VERSION}-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    sqlite3 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm@latest

# Copy package files first for better Docker layer caching
COPY package.json ./

# Install dependencies directly
RUN pnpm install --no-frozen-lockfile

# Copy lead-platform source code
COPY . .

# Generate Prisma client if schema exists
RUN if [ -f "prisma/schema.prisma" ]; then pnpm prisma generate; fi

# Create a non-root user for security
RUN groupadd -r tekup && useradd -r -g tekup -s /bin/bash tekup
RUN chown -R tekup:tekup /app
USER tekup

# Expose port
EXPOSE 3003

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3003/health || exit 1

# Default command
CMD ["pnpm", "dev"]
