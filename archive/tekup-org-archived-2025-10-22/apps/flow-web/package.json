{
  "name": "@tekup/flow-web",
  "version": "0.1.1",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @tekup/config build && next dev",
    "build": "pnpm --filter @tekup/config build && next build",
    "start": "pnpm --filter @tekup/config build && next start",
    "lint": "eslint .",
    "test": "jest -c jest.config.cjs",
    "test:ci": "jest -c jest.config.cjs --ci --maxWorkers=50%",
    "coverage": "jest -c jest.config.cjs --coverage",
    "flakes": "node ../../scripts/detect-flakes.cjs --repeats 5",
    "e2e": "playwright test",
    "e2e:ci": "playwright test --reporter=line,junit --output=./test-results",
    "check:types": "tsc --noEmit",
    "postinstall": "tailwindcss --help > NUL 2>&1 || echo Tailwind installed",
    "tailwind:init": "tailwindcss init -p"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.51.23",
    "@tanstack/react-query-devtools": "^5.51.23",
    "@tekup/config": "workspace:*",
    "@tekup/design-system": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.462.0",
    "next": "15.5.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwind-merge": "^2.6.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.1",
    "typescript": "^5.6.3"
  }
}
