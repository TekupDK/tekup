{
  "info": {
    "name": "@tekup/flow-api API",
    "description": "Core backend API service for multi-tenant incident response",
    "version": "0.1.1",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "key",
        "value": "x-api-key",
        "type": "string"
      },
      {
        "key": "value",
        "value": "{{api_key}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "your-api-key-here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health check endpoint",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        },
        "description": "Returns the health status of the API"
      }
    },
    {
      "name": "Swagger UI documentation",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/docs",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "docs"
          ]
        },
        "description": "Interactive API documentation"
      }
    },
    {
      "name": "Get all leads",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/leads",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "leads"
          ]
        },
        "description": "Retrieve all leads for the authenticated tenant"
      }
    },
    {
      "name": "Create a new lead",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/leads",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "leads"
          ]
        },
        "description": "Create a new lead for the authenticated tenant",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"ref\": \"#/components/schemas/CreateLeadDto\"\n}"
        }
      }
    }
  ]
}