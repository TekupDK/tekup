# =============================================================================
# TekUp Unified Browser MCP Server - Environment Variables
# =============================================================================
# This file defines all environment variables needed for the unified browser
# MCP server configuration. Copy to .env and customize for your environment.
#
# Generated: 2025-01-12T13:20:00Z
# =============================================================================

# -----------------------------------------------------------------------------
# CORE MCP SETTINGS
# -----------------------------------------------------------------------------
NODE_ENV=development
MCP_ENVIRONMENT=development
MCP_WORKSPACE_ROOT=C:\Users\empir\Tekup-org

# -----------------------------------------------------------------------------
# BROWSER SERVER PORTS (Non-conflicting high ports)
# -----------------------------------------------------------------------------
# Primary browser server port
MCP_BROWSER_PRIMARY_PORT=4030

# Agent infrastructure browser server port  
MCP_BROWSER_AGENT_INFRA_PORT=4031

# Browser tools server port
MCP_BROWSER_TOOLS_PORT=4032

# Custom WebSocket server port
MCP_BROWSER_WEBSOCKET_PORT=4033

# WebSocket extension connection URL
MCP_BROWSER_EXTENSION_WS_URL=ws://localhost:9009

# -----------------------------------------------------------------------------
# BROWSER CONFIGURATION
# -----------------------------------------------------------------------------
# Path to browser executable (optional - uses system default if not set)
MCP_BROWSER_EXECUTABLE_PATH=

# Browser headless mode (true/false)
MCP_BROWSER_HEADLESS=true

# Browser operation timeout in milliseconds
MCP_BROWSER_TIMEOUT=30000

# Browser viewport settings
MCP_BROWSER_VIEWPORT_WIDTH=1920
MCP_BROWSER_VIEWPORT_HEIGHT=1080

# Browser user agent override (optional)
MCP_BROWSER_USER_AGENT=

# -----------------------------------------------------------------------------
# SERVER ENABLEMENT FLAGS
# -----------------------------------------------------------------------------
# Enable/disable individual browser servers
MCP_BROWSER_AGENT_INFRA_ENABLED=false
MCP_BROWSER_TOOLS_ENABLED=false
MCP_BROWSER_CUSTOM_ENABLED=true

# Debug modes
MCP_AGENT_INFRA_DEBUG=false
MCP_BROWSER_DEBUG=false

# -----------------------------------------------------------------------------
# CUSTOM SERVER PATHS
# -----------------------------------------------------------------------------
# Path to custom browser server script
MCP_BROWSER_CUSTOM_SERVER_PATH=mcp-browser-server.cjs

# Path to browser tools configuration
MCP_BROWSER_TOOLS_CONFIG_PATH=.mcp/configs/browser-tools-config.json

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
# Allowed origins for CORS (comma-separated)
MCP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://app.tekup.org

# Allowed domains for browser automation (comma-separated)
MCP_ALLOWED_DOMAINS=localhost,tekup.org,*.tekup.org

# Rate limiting settings
MCP_RATE_LIMIT_REQUESTS_PER_MINUTE=60
MCP_RATE_LIMIT_BURST_SIZE=10

# -----------------------------------------------------------------------------
# MONITORING AND LOGGING
# -----------------------------------------------------------------------------
# Enable comprehensive monitoring
MCP_MONITORING_ENABLED=true

# Metrics collection interval (milliseconds)
MCP_METRICS_INTERVAL=30000

# Log level (error, warn, info, debug, trace)
MCP_LOG_LEVEL=info

# Log file path
MCP_LOG_FILE=.mcp/logs/browser-unified.log

# Enable structured JSON logging
MCP_LOG_JSON=false

# -----------------------------------------------------------------------------
# PERFORMANCE TUNING
# -----------------------------------------------------------------------------
# Load balancing strategy (priority, round-robin, least-connections, weighted)
MCP_LOAD_BALANCER_STRATEGY=priority

# Health check interval (milliseconds)
MCP_HEALTH_CHECK_INTERVAL=30000

# Circuit breaker failure threshold
MCP_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5

# Circuit breaker recovery timeout (milliseconds)
MCP_CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60000

# Request timeout (milliseconds)
MCP_REQUEST_TIMEOUT=60000

# Maximum concurrent requests per server
MCP_MAX_CONCURRENT_REQUESTS=5

# Connection pool size
MCP_CONNECTION_POOL_SIZE=10

# -----------------------------------------------------------------------------
# DEVELOPMENT ENVIRONMENT OVERRIDES
# -----------------------------------------------------------------------------
# Development-specific settings (only when NODE_ENV=development)
MCP_DEV_BROWSER_HEADLESS=false
MCP_DEV_ENABLE_DEBUG_TOOLS=true
MCP_DEV_VERBOSE_LOGGING=true
MCP_DEV_DISABLE_RATE_LIMITING=true

# -----------------------------------------------------------------------------
# STAGING ENVIRONMENT OVERRIDES
# -----------------------------------------------------------------------------
# Staging-specific settings (only when NODE_ENV=staging)
MCP_STAGING_BROWSER_HEADLESS=true
MCP_STAGING_LOG_LEVEL=info
MCP_STAGING_ENABLE_ALL_SERVERS=true

# -----------------------------------------------------------------------------
# PRODUCTION ENVIRONMENT OVERRIDES  
# -----------------------------------------------------------------------------
# Production-specific settings (only when NODE_ENV=production)
MCP_PROD_BROWSER_HEADLESS=true
MCP_PROD_LOG_LEVEL=warn
MCP_PROD_DISABLE_DEBUG=true
MCP_PROD_STRICT_SECURITY=true
MCP_PROD_MAX_CONCURRENT_REQUESTS=10

# -----------------------------------------------------------------------------
# API KEYS AND SECRETS (Move from plaintext configs)
# -----------------------------------------------------------------------------
# Brave Search API Key (moved from configuration files)
MCP_BRAVE_API_KEY=BSA5503dX9kHsCxVoYAVub3VvWB1yxE

# Billy API Token (moved from configuration files)  
MCP_BILLY_API_TOKEN=REDACTED_BILLY_API_KEY

# Zapier Webhook Endpoint (moved from configuration files)
MCP_ZAPIER_ENDPOINT=https://mcp.zapier.com/api/mcp/s/ZDNi...

# -----------------------------------------------------------------------------
# DOCKER CONTAINER SETTINGS
# -----------------------------------------------------------------------------
# Docker-specific environment variables (for containerized deployment)
DOCKER_BROWSER_IMAGE=browserless/chrome:latest
DOCKER_BROWSER_NETWORK=mcp-network
DOCKER_BROWSER_MEMORY_LIMIT=2g
DOCKER_BROWSER_CPU_LIMIT=1.0

# Container health check settings
DOCKER_HEALTH_CHECK_INTERVAL=30s
DOCKER_HEALTH_CHECK_TIMEOUT=10s
DOCKER_HEALTH_CHECK_RETRIES=3

# -----------------------------------------------------------------------------
# ADVANCED CONFIGURATION
# -----------------------------------------------------------------------------
# Enable experimental features
MCP_EXPERIMENTAL_FEATURES=false

# WebDriver capabilities (JSON string)
MCP_WEBDRIVER_CAPABILITIES={}

# Custom browser launch arguments (comma-separated)
MCP_BROWSER_ARGS=--no-sandbox,--disable-dev-shm-usage,--disable-gpu

# Proxy configuration (optional)
MCP_PROXY_HOST=
MCP_PROXY_PORT=
MCP_PROXY_USERNAME=
MCP_PROXY_PASSWORD=

# -----------------------------------------------------------------------------
# BACKUP AND RECOVERY
# -----------------------------------------------------------------------------
# Enable automatic configuration backups
MCP_AUTO_BACKUP=true

# Backup retention period (days)
MCP_BACKUP_RETENTION_DAYS=7

# Configuration snapshot interval (hours)
MCP_CONFIG_SNAPSHOT_INTERVAL=24

# =============================================================================
# USAGE INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env in your project root
# 2. Customize the values for your specific environment
# 3. Never commit .env files to version control
# 4. Use different .env files for different environments:
#    - .env.development
#    - .env.staging  
#    - .env.production
# 5. The MCP configuration loader will automatically load these variables
