{
  "name": "@tekup/mcp-gateway",
  "version": "1.0.0",
  "description": "TekUp MCP Gateway - Central API gateway for containerized MCP services",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:inspect": "tsx watch --inspect src/index.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "docker:build": "docker build -t mcp-gateway .",
    "docker:run": "docker run -p 3000:3000 mcp-gateway",
    "health": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "mcp",
    "gateway",
    "api-gateway",
    "microservices",
    "load-balancer",
    "service-discovery",
    "websocket",
    "monitoring",
    "tekup"
  ],
  "author": "TekUp.org Development Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "http-proxy-middleware": "^2.0.6",
    "socket.io": "^4.7.4",
    "ws": "^8.14.2",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "lodash.merge": "^4.6.2",
    "lodash.clonedeep": "^4.5.0",
    "nanoid": "^5.0.4",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/ws": "^8.5.10",
    "@types/lodash.merge": "^4.6.9",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "vitest": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tekup-org/tekup-org.git",
    "directory": ".mcp/docker/gateway"
  },
  "bugs": {
    "url": "https://github.com/tekup-org/tekup-org/issues"
  },
  "homepage": "https://github.com/tekup-org/tekup-org#readme",
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "peerDependencies": {
    "@tekup/shared": "workspace:*"
  }
}