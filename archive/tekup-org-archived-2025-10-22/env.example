# TekUp Monorepo Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Core Infrastructure
# =============================================================================

# Application environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tekup?schema=public
PX_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/tekup?schema=public

# =============================================================================
# API Configuration
# =============================================================================

# Flow API (Lead Management)
FLOW_API_URL=http://localhost:4000
FLOW_API_KEY=your-flow-api-key-here
PX_API_PORT=4000
PX_AUTO_SEED=true

# Lead Platform API
LEAD_API_URL=http://localhost:3003
LEAD_API_KEY=your-lead-api-key-here

# CRM API
CRM_API_URL=http://localhost:3002
CRM_API_KEY=your-crm-api-key-here

# Voice Agent API
VOICE_API_URL=http://localhost:3001
VOICE_API_KEY=your-voice-api-key-here

# AgentRooms API
AGENTROOMS_API_URL=http://localhost:8080
AGENTROOMS_API_KEY=your-agentrooms-api-key-here

# Secure Platform API (Future)
SECURE_API_URL=http://localhost:4010
SECURE_API_KEY=your-secure-api-key-here

# Inbox AI API
INBOX_API_URL=http://localhost:5000
INBOX_API_KEY=your-inbox-api-key-here

# WebSocket Configuration
FLOW_WS_URL=ws://localhost:4000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002

# =============================================================================
# AI Services
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic/Claude Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_API_KEY=your-claude-api-key-here
CLAUDE_CODE_OAUTH_TOKEN=your-claude-oauth-token-here

# Google/Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=1000

# =============================================================================
# Frontend Configuration
# =============================================================================

# Next.js Public Variables (exposed to browser)
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_TENANT_API_KEY=dev-key

# Mobile API
MOBILE_API_BASE=http://localhost:4000

# =============================================================================
# Feature Flags
# =============================================================================

FEATURE_INCIDENTS=false
FEATURE_LEADS=true
FEATURE_INBOX=true

# =============================================================================
# Analytics & Tracking
# =============================================================================

PLAUSIBLE_DOMAIN=your-domain.com
PLAUSIBLE_API_HOST=https://plausible.io

# =============================================================================
# Tenant & Authentication
# =============================================================================

# Website/Marketing Tenant Key
WEBSITE_TENANT_KEY=your-website-tenant-key-here

# JWT Configuration (Auto-generated if not provided)
JWT_SECRET=your-jwt-secret-here

# =============================================================================
# Development & Testing
# =============================================================================

# Claude Credentials Path (for agentrooms)
CLAUDE_CREDENTIALS_PATH=~/.claude-credentials.json

# Debug flags
DEBUG_PRELOAD_SCRIPT=0

# CI Environment
CI=false
