# TekUp Gmail Automation Configuration

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Gmail API Configuration
GMAIL_CREDENTIALS_FILE=config/credentials.json
GMAIL_TOKEN_FILE=config/token.json
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send

# Economic API Configuration
ECONOMIC_API_URL=https://restapi.e-conomic.com
ECONOMIC_APP_SECRET_TOKEN=your_app_secret_token
ECONOMIC_AGREEMENT_GRANT_TOKEN=your_agreement_grant_token

# Google Photos API Configuration
GOOGLE_PHOTOS_CREDENTIALS_FILE=config/google_photos_credentials.json
GOOGLE_PHOTOS_TOKEN_FILE=config/google_photos_token.json

# RenOS Integration
RENOS_API_URL=https://api.renos.dk
RENOS_API_KEY=your_renos_api_key

# Database Configuration
DATABASE_URL=postgresql://tekup:tekup_password@localhost:5432/tekup_gmail
REDIS_URL=redis://localhost:6379/0

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Forwarding Configuration
FORWARD_TO_EMAIL=info@tekup.dk
FORWARD_SUBJECT_PREFIX=[TekUp] 
FORWARD_FROM_NAME=TekUp Gmail Automation

# Processing Configuration
PROCESS_INTERVAL=300  # seconds
MAX_EMAILS_PER_BATCH=10
DUPLICATE_CHECK_ENABLED=true
RECEIPT_PROCESSING_ENABLED=true

# Logging Configuration
LOG_FILE=logs/tekup-gmail.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Security
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1,tekup.dk

# Monitoring
HEALTH_CHECK_INTERVAL=60  # seconds
METRICS_ENABLED=true
