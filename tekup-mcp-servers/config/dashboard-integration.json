      "status": "active",
      "category": "testing-tools",
      "tags": ["browser-automation", "testing", "puppeteer"]
    }
  ],
  "monitoring": {
    "pollInterval": 30000,
    "healthCheckTimeout": 5000,
    "retryAttempts": 3,
    "alertThresholds": {
      "memoryUsageWarning": 75,
      "memoryUsageCritical": 90,
      "errorRateWarning": 20,
      "errorRateCritical": 50,
      "responseTimeWarning": 5000,
      "responseTimeCritical": 10000,
      "toolExecutionTimeWarning": 10000,
      "toolExecutionTimeCritical": 30000
    }
  },
  "dashboard": {
    "refreshInterval": 30000,
    "enableRealtimeUpdates": true,
    "enableAlerts": true,
    "enableHistoricalData": true,
    "dataRetentionDays": 30,
    "chartUpdateInterval": 10000
  }
}