      "healthEndpoint": "/health",
      "metricsEndpoint": "/metrics",
      "summaryEndpoint": "/metrics/summary",
      "status": "active",
      "category": "database-tools",
      "tags": ["supabase", "prisma", "database"]
    },
    {
      "id": "knowledge-mcp",
      "name": "Knowledge MCP",
