# GitHub Personal Access Token for repository operations
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_pat_here

# Supabase URL for database connection
SUPABASE_URL=your_supabase_url_here

# Supabase Anonymous Key for client-side access
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Billy API Key for Billy API integration
BILLY_API_KEY=your_billy_api_key_here

# Billy Organization ID for Billy API integration
BILLY_ORGANIZATION_ID=your_billy_organization_id_here

# Path to the memory file for persistent storage
MEMORY_FILE_PATH=./memory.json

# Knowledge MCP Server Configuration
# Required: Root directory containing documentation to search
KNOWLEDGE_SEARCH_ROOT=
# Optional: File patterns to search (comma-separated, default: "**/*.{md,mdx,txt}")
KNOWLEDGE_FILE_GLOBS=**/*.{md,mdx,txt}
# Optional: Maximum number of files to scan (default: 5000)
KNOWLEDGE_MAX_FILES=5000