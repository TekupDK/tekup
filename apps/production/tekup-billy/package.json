{
  "name": "@tekup/billy-mcp",
  "version": "2.0.0",
  "description": "Billy-mcp By Tekup - Billy.dk API integration for AI agents via Model Context Protocol (MCP) with Redis scaling",
  "type": "module",
  "main": "src/http-server.ts",
  "scripts": {
    "build": "tsc",
    "start": "node -r tsx/esm src/http-server.ts",
    "start:http": "tsx src/http-server.ts",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/http-server.ts",
    "inspect": "npx @modelcontextprotocol/inspector dist/index.js",
    "test": "npm run test:integration && npm run test:production",
    "test:watch": "tsx --watch tests/test-integration.ts",
    "test:integration": "tsx tests/test-integration.ts",
    "test:production": "tsx tests/test-production.ts",
    "test:operations": "tsx tests/test-production-operations.ts",
    "test:billy": "tsx tests/test-billy-api.ts",
    "test:mcp": "tsx tests/test-mcp-streamable-http.ts",
    "test:all": "npm run test:integration && npm run test:production && npm run test:operations",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"#node_modules\"",
    "docker:build": "docker build -t tekup-billy-mcp .",
    "docker:run": "docker run --env-file .env -p 3000:3000 tekup-billy-mcp",
    "test:http": "curl http://localhost:3000/health"
  },
  "keywords": [
    "mcp",
    "billy",
    "accounting",
    "api",
    "ai",
    "tekup"
  ],
  "author": "Tekup",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0",
    "@tekup/database": "file:../tekup-database",
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "opossum": "^8.1.4",
    "rate-limit-redis": "^4.2.0",
    "tslib": "^2.6.2",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/node": "^20.19.21",
    "@types/opossum": "^8.1.9",
    "@types/winston": "^2.4.4",
    "markdownlint-cli2": "^0.18.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
