{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "apps/production/tekup-billy/Dockerfile",
    "dockerContext": "apps/production/tekup-billy"
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 15,
    "healthcheckInterval": 20,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "startCommand": "npx tsx src/http-server.ts"
  },
  "variables": {
    "CORS_ORIGIN": "*",
    "ENABLE_SUPABASE_LOGGING": "true",
    "NODE_ENV": "production",
    "BILLY_DRY_RUN": "false",
    "BILLY_TEST_MODE": "false",
    "BILLY_API_BASE": "https://api.billysbilling.com/v2",
    "BILLY_API_KEY": "${{BILLY_API_KEY}}",
    "BILLY_ORGANIZATION_ID": "${{BILLY_ORGANIZATION_ID}}",
    "MCP_API_KEY": "${{MCP_API_KEY}}"
  }
}
