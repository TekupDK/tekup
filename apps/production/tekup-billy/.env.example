# Required - Billy.dk API
BILLY_API_KEY=your_api_key_here
BILLY_ORGANIZATION_ID=your_org_id_here
BILLY_API_BASE=https://api.billysbilling.com/v2

# Optional - Supabase Database
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional - Configuration
PORT=3000
BILLY_TEST_MODE=false
BILLY_DRY_RUN=false
MCP_API_KEY=your_mcp_api_key

# Optional - CORS
CORS_ORIGIN=*

# Optional - Logging
LOG_LEVEL=info
NODE_ENV=production

# Optional - Redis (for distributed state & horizontal scaling)
# Leave empty to run in standalone mode (single instance)
REDIS_URL=redis://localhost:6379
# Redis URL examples:
# Local: redis://localhost:6379
# Upstash: redis://:password@host:port
# Redis Cloud: rediss://:password@host:port

# Optional - Sentry (hvis implementeret)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
