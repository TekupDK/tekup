{
  "name": "@tekup/database",
  "version": "1.0.0",
  "description": "Central database service for Tekup Portfolio",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Jonas Abde <[email protected]>",
  "license": "PRIVATE",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.15.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:pull": "prisma db pull",
    "db:seed": "tsx prisma/seeds/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:generate": "prisma generate",
    "db:validate": "prisma validate",
    "db:format": "prisma format",
    "db:backup": "tsx prisma/scripts/backup.ts",
    "db:restore": "tsx prisma/scripts/restore.ts",
    "db:health": "tsx prisma/scripts/health-check.ts",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "lint": "eslint src prisma --ext .ts",
    "lint:fix": "eslint src prisma --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"prisma/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "prisma": "^6.18.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
