#
# Lightweight Expo dev server using Alpine Linux (consistent with backend)
# Native builds (APK/IPA) handled via EAS (Expo Application Services), not Docker

FROM node:18-alpine

# Install basic dependencies for Expo
RUN apk add --no-cache git

# Set working directory
WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expo ports
EXPOSE 19000 19001 19002 8081

# Environment variables for Expo
ENV EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0
ENV REACT_NATIVE_PACKAGER_HOSTNAME=0.0.0.0

# Start Expo development server
CMD ["npm", "start"]
