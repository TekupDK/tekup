# =====================================================
# TekupAI Backend - Environment Configuration Template
# =====================================================
# Copy this file to .env and fill in your values
# =====================================================

# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1
APP_NAME=TekupAI
APP_URL=http://localhost:3001

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/tekup_ai?schema=ai_assistant"
DIRECT_URL="postgresql://postgres:password@localhost:5432/tekup_ai?schema=ai_assistant"

# Supabase (for authentication)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# Anthropic (Claude AI)
ANTHROPIC_API_KEY=sk-ant-api03-...
ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# OpenAI (Optional fallback)
OPENAI_API_KEY=sk-...
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview

# Redis (Optional - for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MCP Servers Configuration
MCP_SERVERS_CONFIG_PATH=./config/mcp-servers.json
MCP_ENABLE_HTTP=true
MCP_ENABLE_STDIO=true
MCP_HTTP_TIMEOUT=30000
MCP_STDIO_TIMEOUT=30000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Sentry (Error Tracking - Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# WebSocket
WS_PORT=3002
WS_PATH=/ws
WS_CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_COMPRESSION=true
ENABLE_HELMET=true
ENABLE_THROTTLING=true
ENABLE_MEMORY_SYSTEM=true
ENABLE_MCP_INTEGRATION=true

# Memory System
MAX_MEMORIES_PER_USER=50
MEMORY_RETENTION_DAYS=90

# Usage Tracking
TRACK_USAGE_STATS=true
COST_PER_1K_INPUT_TOKENS=0.003
COST_PER_1K_OUTPUT_TOKENS=0.015

# API Versioning
API_VERSION=1.0.0
